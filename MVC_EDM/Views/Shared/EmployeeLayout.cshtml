<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_EDM.styles.css" asp-append-version="true" />
      <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
       <style>
        .dropbtn {
            background-color: #ffffff;
            color: rgb(0, 0, 0);
            font-size: 22px;
            border: 0px solid black;
            margin-left: 59.5rem;
        }

        .dropdown {
            position: relative;
            display: inline-block;
            left: 0%;
        }

        .dropdown span {
            font-size: 2rem;
            color: rgb(99, 99, 153);
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            right: 0;
        }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content p {
            font-size: 2.5rem;
            text-align: center;
            color: rgb(61, 92, 92);

        }

        .dropdown-content a:hover {
            background-color: #dcfdff;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #dcfdff;
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" style="color: white;" asp-area="" asp-controller="Employee" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" style="color: white;" asp-area="" asp-controller="Employee" asp-action="MyProfile">Profile</a>
                        </li>
                        <li class="nav-item" style="width:125px;" >
                            <a class="nav-link text-light"  style="color: white;" asp-area="" asp-controller="Employee" asp-action="Request">Request Admin</a>
                        </li>
                        <li class="nav-item" style="width:125px;" >
                            <a class="nav-link text-light"  style="color: white;" asp-area="" asp-controller="Employee" asp-action="PutFeedback">Ratings</a>
                        </li>
                        
                         @* <li class="nav-item" style="margin-left:77%">@ViewBag.Session
                            <a class="btn btn-primary" asp-area="" asp-controller="Employee" asp-action="Logout">Logout</a>
                        </li> *@
                         <div class="dropdown">
                            <button class="dropbtn"><i class="bi bi-person-circle"></i></button>
                            <div class="dropdown-content">
                                @* <p>@ViewBag.Session</p> *@
                                 <a href="#"> @ViewBag.Session</a> 
                                <a asp-controller="Employee" asp-action="Logout">Logout</a>
                            </div>
                            </li>
                            </div>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>
