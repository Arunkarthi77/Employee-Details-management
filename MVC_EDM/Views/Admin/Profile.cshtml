@model EmployeeProfile
@{
    ViewData["Title"] = "Profile";
    Layout = "../Shared/AdminLayout";
}
 <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
 @* <style>
    .whole {
    background-image: linear-gradient(174.2deg, rgba(255, 244, 228, 1) 7.1%, rgba(240, 246, 238, 1) 67.4%);
  }
 </style> *@

<body class="whole" style="background-color:rgb(57, 82, 86);">
    <form asp-action="Profile" 
      asp-controller="Admin" 
      method="post" 
      enctype="multipart/form-data">
    <div class="container rounded bg-white mt-5 mb-5" style="display: flex;">
         
        <div class="row">
           <div class="col-md-3 border-right" >
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"> 
                <img class="rounded-circle mt-5"
                         
              src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" width="150px" height="150px"><br>
    
                 <input type="file" asp-for="image" style="padding-left: 70px;" required> </div> 
            </div>
    
               
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="text-right" style="padding-left: 50%;">Profile </h2>
                    </div>
                     <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Employee Id</label><input type="text" class="form-control" style="width:8rem"
                            asp-for="EmployeeId"    placeholder="Employee Id" readonly  ></div>
                        <div class="col-md-6"><label class="labels">Employee Name</label><input type="text"
                            asp-for="EmployeeName"       class="form-control" style="width:8rem"  placeholder="EmployeeName" readonly ></div>
                            
                       </div>      
                  <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="number"
                              asp-for="phonenumber"     class="form-control" placeholder="Mobile Number"  required>
                              <span asp-validation-for="phonenumber" class="textdanger"></span></div>
                         <div class="col-md-12"><label class="labels">Email</label><input type="email"
                              asp-for="mailid"     class="form-control" placeholder="Mail Id"  required></div>
                        <div class="col-md-12"><label class="labels">Address Line 1</label><input type="text"
                              asp-for="addressline1"     class="form-control" placeholder="Address"  required></div>
                        <div class="col-md-12"><label class="labels">AddressLine2</label><input type="text"
                               asp-for="addressline2"    class="form-control" placeholder="Address" ></div>
                        <div class="col-md-12"><label class="labels">Postcode</label><input type="number"
                              asp-for="pincode"     class="form-control" placeholder="Postcode"  required></div>
                        <div class="col-md-12"><label class="labels">State</label><input type="text"
                              asp-for="state"     class="form-control" placeholder="State"  required></div>
                        <div class="col-md-12"><label class="labels">Area</label><input type="text" class="form-control"
                              asp-for="area"     placeholder="area"  required></div>
                        <div class="col-md-12"><label class="labels">Education</label><input type="text"
                               asp-for="education"    class="form-control" placeholder="Education"  required></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">Country</label><input type="text"
                               asp-for="country"    class="form-control" placeholder="Country"  required></div>
                          <div class="col-md-6"><label class="labels">Aadhar Number</label><input type="number"
                               asp-for="Aadharnumber"    class="form-control" placeholder="Aadhar Number"  required></div>       
                   </div>
           
                </div>
             </div> 

            <div class="col-md-4">
                <div class="p-3 py-5"><br><br><br><br><br>
                
                    <div class="col-md-12"><label class="labels">Experience </label><input type="text"
                         asp-for="experience"      class="form-control" placeholder="Experience" ></div> 

                     <div class="col-md-12"><label class="labels">Project Team</label><input type="text"
                          asp-for="team"     class="form-control" placeholder="Project Team" required></div>
                      <div class="col-md-12"><label class="labels">Team Lead</label><input type="text"
                          asp-for="TeamLead"     class="form-control" placeholder="Team Lead" required></div>
                               
                     <div class="col-md-12"><label class="labels">Designation</label><input type="text"
                          asp-for="Designation"     class="form-control" placeholder="Designation"  required></div>
                   
                   
                    <div class="col-md-12"><label class="labels">HR Partner</label><input type="text"
                          asp-for="hrpartner"     class="form-control" placeholder="HR Partner" required></div>
                    <div class="col-md-12"><label class="labels">Date of Birth </label><input type="date"
                          asp-for="dateofbirth"     class="form-control" placeholder="date of birth" min="1960-01-01"
                            max="2010-12-31"  required></div>
                    <div class="col-md-12"><label class="labels">Date of Joining</label><input type="date"
                           asp-for="dateofjoining"    class="form-control" placeholder="date of joining" min="2000-01-01"
                            max="2023-12-31"  required></div>
                        
                     <div class="col-md-12"><label class="labels">Gender</label><input type="text" 
                           asp-for="Gender"    class="form-control" placeholder="Gender"  required></div>
                        
                      <div class="col-md-12"><label class="labels">Salary</label><input type="number" 
                           asp-for="salary"    class="form-control" placeholder="Salary"  required></div>  <hr>
                              
                 

                     <div style="text-align: center;">
                         <input type="submit" class="btnSubmit" style="text-align: center;" />
                     </div>      
                       
                   
                            
                          

                </div>
            </div>
               
      @section Scripts
                    {
                    @{
                        <Partial name="_ValidationScriptsPartial" />
                    }
                }

      
    </div>
    </div>
 </form>
</body>
